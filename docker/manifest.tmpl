image: lslintorg/ls-lint:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: lslintorg/ls-lint:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: lslintorg/ls-lint:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-arm64
    platform:
      architecture: arm64
      os: linux
      variant: v8
  -
    image: lslintorg/ls-lint:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-ppc64le
    platform:
      architecture: ppc64le
      os: linux
  -
    image: lslintorg/ls-lint:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}linux-s390x
    platform:
      architecture: s390x
      os: linux
